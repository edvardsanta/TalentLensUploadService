  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.19.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Services\UploadFiles.Services\UploadFiles.Services.csproj" />
  </ItemGroup>

</Project>
